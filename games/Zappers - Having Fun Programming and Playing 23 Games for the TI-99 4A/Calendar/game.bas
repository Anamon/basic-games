100 REM CALENDAR
110 CALL CLEAR
120 DIM DPM(12)
130 FOR I=1 TO 12
140 READ DPM(I)
150 NEXT I
160 DATA 31,28,31,30,31,30,31,31,30,31,30,31
170 PRINT "THIS PROGRAM GENERATES A    CALENDAR OF ANY MONTH OF    YOUR CHOICE.": : : : : : : :
180 INPUT "WHAT YEAR (AFTER 1582): ":YEAR
190 IF (YEAR<1582)+(YEAR<>INT(YEAR))THEN 180
200 INPUT "WHAT MONTH (1-12): ":MONTH
210 IF (MONTH<1)+(MONTH>12)+(MONTH<>INT(MONTH))THEN 200
220 DPM(2)=29
230 IF (YEAR/400-INT(YEAR/400))+(YEAR/4=INT(YEAR/4))*(YEAR/100<>INT(YEAR/100))THEN 250
240 DPM(2)=28
250 JDAY=0
260 FOR I=1 TO MONTH-1
270 JDAY=JDAY+DPM(I)
280 NEXT I
290 PRINT : : :"SU M   TU  W   TH  F   SA":"---------------------------": :
300 FOR JULDAY=JDAY TO JDAY+DPM(MONTH)-1
310 TEMP=YEAR+JULDAY+INT((YEAR-1)/400)-INT((YEAR-1)/100)+INT((YEAR-1)/4)
320 POSITION=TEMP-INT(TEMP/7)*7
330 WEEKDAY = POSITION-7*(WEEKDAY=0)
340 PRINT TAB(POSITION*4);STR$(JULDAY-JDAY+1);
350 IF WEEKDAY<>7 THEN 370
360 PRINT
370 NEXT JULDAY
380 PRINT : : :
