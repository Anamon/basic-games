440 PRINT
450 PRINT "TO CONTINUE, HIT ENTER."
460 PRINT "TO END, HIT THE E KEY."
470 CALL KEY(0,K,S)
480 IF K=69 THEN 570
490 IF K>0 THEN 240
500 GOTO 470
510 REM -SCALE
520 IF HI<WI THEN 550
530 SCALE=INT(HI/15)+1
540 GOTO 560
550 SCALE=INT(WI/15)+1
560 RETURN
570 END
