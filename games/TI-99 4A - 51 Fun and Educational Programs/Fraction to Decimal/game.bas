100 REM -FRACTION TO DECIMAL
110 CALL CLEAR
120 PRINT "*** FRACTION TO DECIMAL ***"
130 PRINT
140 PRINT
150 NUM$=" "
160 DENOM$=" "
170 SWITCH=0
180 PRINT
190 PRINT
200 PRINT "ENTER FRACTION (SUCH AS 1/5) "
210 PRINT
220 INPUT X$
230 L=LEN(X$)
240 FOR I=1 TO L
250 N$=SEG$(X$,I,1)
260 IF SWITCH=1 THEN 300
270 IF N$="/" THEN 360
280 NUM$=NUM$&N$
290 GOTO 310
300 DENOM$=DENOM$&N$
310 NEXT I
320 DECIMAL=VAL(NUM$)/VAL(DENOM$)
330 PRINT
340 PRINT X$;"=";DECIMAL
350 GOTO 150
360 REM SWITCH
370 SWITCH=1
380 GOTO 310
