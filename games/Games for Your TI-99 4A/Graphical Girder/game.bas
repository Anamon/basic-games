10 REM  GRAPHICAL GIRDER
20 REM
30 CALL SCREEN(2)
40 CALL CLEAR
50 FOR T=2 TO 12
60 CALL CHAR(40+(T-2)*8,"")
70 CALL COLOR(T,T+2,T+2)
80 NEXT T
90 A=3+INT(RND*(28))
100 B=3+INT(RND*(18))
110 CALL VCHAR(1,A,40+INT(((RND*10)*8)),B)
120 CALL HCHAR(B,31-A,40+INT(((RND*10)*8)),A)
130 A=INT(RND*28)+3
140 B=INT(RND*18)+3
150 CALL VCHAR(22-B,A,40+INT(((RND*10)*8)),B)
160 CALL HCHAR(B,3,40+INT(((RND*10)*8)),A)
170 IF INT(RND*20)<>17 THEN 200
180 CALL CLEAR
190 CALL SCREEN(RND*15+1)
200 GOTO 90
